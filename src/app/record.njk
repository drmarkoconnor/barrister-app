<h1 class="mb-3">{{ title }}</h1>

<div class="mb-2 small text-muted" id="recStatus">Idle</div>

<div class="d-flex gap-2 mb-3">
	<button class="btn btn-primary" id="recBtn" type="button">● Record</button>
	<button class="btn btn-warning" id="stopBtn" type="button" disabled>
		■ Stop
	</button>
	<button class="btn btn-secondary" id="playBtn" type="button" disabled>
		▶︎ Replay
	</button>
	<button class="btn btn-success" id="sendBtn" type="button" disabled>
		⇧ Send for transcription
	</button>
</div>

<audio
	id="preview"
	controls
	preload="metadata"
	style="width: 100%; max-width: 520px"
></audio>

<pre
	id="recOut"
	class="mt-3 p-2 bg-light border rounded small"
	style="white-space: pre-wrap; max-height: 420px; overflow: auto"
></pre>

<script src="/assets/js/record.js"></script>
